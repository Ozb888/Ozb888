import java.util.Scanner;
public class Input {
    public static void main(String[] args){
        Scanner in = new Scanner(System.in);

        System.out.print("How many seconds?: ");
        int tsecs = in.nextInt();

        int tmin = tsecs / 60;
        int seconds = tsecs % 60;

        int hours = tmin / 60;
        int minutes = tmin % 60;

        System.out.printf("%d seconds = %d hours, %d minutes, and %d seconds", tsecs, hours, minutes, seconds);
    }
}
